<script>
  // Schedule carousel
  const images1 = [
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/SCC%202025%20Schedule%20-%2010.20.25_Page_1.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/SCC%202025%20Schedule%20-%2010.20.25_Page_2.jpg"
  ];
  let currentIndex1 = 0;
  function changeImage1(direction) {
    currentIndex1 = (currentIndex1 + direction + images1.length) % images1.length;
    document.getElementById("carouselImage1").src = images1[currentIndex1];
  }
  function printAllImages1() {
    const printWindow = window.open('', '_blank');
    printWindow.document.write('<html><head><title>Print Schedule</title></head><body>');
    images1.forEach(img => printWindow.document.write(`<img src="${img}" style="width:100%;margin-bottom:20px;">`));
    printWindow.document.write('</body></html>');
    printWindow.document.close();
    printWindow.onload = () => printWindow.print();
  }

  // Unwelcome Zine carousel
  const images2 = [
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_1.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_2.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_3.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_4.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_5.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_6.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_7.jpg",
    "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Unwelcome_Zine_Page_8.jpg"
  ];
  let currentIndex2 = 0;
  function changeImage2(direction) {
    currentIndex2 = (currentIndex2 + direction + images2.length) % images2.length;
    document.getElementById("carouselImage2").src = images2[currentIndex2];
  }
</script>

