              <script>
                function printImage1() {
                  const imgSrc = document.getElementById("carouselImage1").src;
                  const printWindow = window.open('', '_blank');
                  printWindow.document.write('<html><head><title>Print Tech Tips</title></head><body>');
                  printWindow.document.write(`<img src="${imgSrc}" style="width:100%;margin-bottom:20px;">`);
                  printWindow.document.write('</body></html>');
                  printWindow.document.close();
                  printWindow.onload = () => printWindow.print();
                }
              </script>

