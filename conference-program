      "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Program/SCC%20LR%202025%20Program_Full%20(002)_Page_36.jpg",
      "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Program/SCC%20LR%202025%20Program_Full%20(002)_Page_37.jpg",
      "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Program/SCC%20LR%202025%20Program_Full%20(002)_Page_38.jpg",
      "https://www.sccmla.org/resources/Documents/events/2025_LittleRock/images/Program/SCC%20LR%202025%20Program_Full%20(002)_Page_39.jpg"
    ];

    const carousel = document.getElementById("carouselImage");
    const thumbnails = document.getElementById("thumbnailContainer");
    let currentIndex = 0;

    // Build thumbnails
    images.forEach((src, i) => {
      const t = document.createElement("img");
      t.src = src;
      t.className = i === 0 ? "active" : "";
      t.onclick = () => {
        currentIndex = i;
        updateCarousel();
      };
      thumbnails.appendChild(t);
    });

    function updateCarousel() {
      carousel.src = images[currentIndex];
      const thumbs = thumbnails.querySelectorAll("img");
      thumbs.forEach((t, i) => t.className = i === currentIndex ? "active" : "");
    }

    // Initialize carousel
    updateCarousel();

    // Drag-to-scroll for thumbnails
    const wrapper = document.getElementById("thumbnailWrapper");
    let isDown = false, startX, scrollLeft;

    wrapper.addEventListener("mousedown", e => {
      isDown = true;
      startX = e.pageX - wrapper.offsetLeft;
      scrollLeft = wrapper.scrollLeft;
    });
    wrapper.addEventListener("mouseleave", () => isDown = false);
    wrapper.addEventListener("mouseup", () => isDown = false);
    wrapper.addEventListener("mousemove", e => {
      if(!isDown) return;
      e.preventDefault();
      const x = e.pageX - wrapper.offsetLeft;
      wrapper.scrollLeft = scrollLeft - (x - startX);
    });

    // Print all images
    function printAllImages() {
      const printWindow = window.open("", "_blank");
      printWindow.document.write("<html><head><title>Print Conference Program</title></head><body style='margin:0;'>");
      images.forEach(img => {
        printWindow.document.write(`<img src='${img}' style='width:100%;margin-bottom:20px;'>`);
      });
      printWindow.document.write("</body></html>");
      printWindow.document.close();
      printWindow.onload = () => printWindow.print();
    }
  </script>

</body>
