<script>
  const tags = document.querySelectorAll('.tag');
  const locations = document.querySelectorAll('.location');
  const mapFrame = document.getElementById('mapFrame');
  const resetBtn = document.getElementById('resetBtn');

  let activeTag = null;

  tags.forEach(tag => {
    tag.addEventListener('click', () => {

      // Toggle tag
      if (tag.classList.contains('active')) {
        tag.classList.remove('active');
        activeTag = null;
        showAll();
        return;
      }

      // Activate selected tag
      tags.forEach(t => t.classList.remove('active'));
      tag.classList.add('active');
      activeTag = tag.dataset.tag;

      filterLocations();
    });
  });

  function filterLocations() {
    locations.forEach(loc => {
      const locTags = loc.dataset.tags.split(',');

      if (locTags.includes(activeTag)) {
        loc.style.display = 'block';
      } else {
        loc.style.display = 'none';
      }
    });
  }

  function showAll() {
    locations.forEach(loc => {
      loc.style.display = 'block';
    });
  }

  // Update map when clicking a location
  locations.forEach(loc => {
    loc.addEventListener('click', () => {
      const url = loc.dataset.map;
      mapFrame.src = url.replace("https://maps.app.goo.gl/", "https://www.google.com/maps?q=");
    });
  });

  // Reset
  resetBtn.addEventListener('click', () => {
    tags.forEach(t => t.classList.remove('active'));
    activeTag = null;
    showAll();
    mapFrame.src = "https://maps.google.com/maps?q=Little%20Rock&t=&z=12&ie=UTF8&iwloc=&output=embed";
  });

</script>

